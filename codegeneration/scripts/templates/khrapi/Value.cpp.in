
#include <%abinding/Value.h>

#include <sstream>
#include <bitset>

#include <%abinding/Meta.h>


namespace
{

std::string wrapString(const char * value)
{
    std::stringstream ss;
    ss << "\"";
    ss << (value == nullptr ? "nullptr" : value);
    ss << "\"";
    return ss.str();
}

}

namespace %abinding
{

template <>
void Value<%a::%Aenum>::printOn(std::ostream & stream) const
{
    auto name = %abinding::Meta::getString(value);
    stream.write(name.c_str(), static_cast<std::streamsize>(name.size()));
}

